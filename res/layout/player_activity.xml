<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/header_layout"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"   
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        >
        
        <ImageButton
            android:id="@id/repeat_music"
            android:background="#00000000"
            android:src="@drawable/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"  
            
            />
        
        <TextView 
            android:id="@+id/musicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/siger"
            android:lines="1"
            android:ellipsize="marquee"
            android:focusable="true"  
            android:focusableInTouchMode="true" 
            android:layout_alignBaseline="@id/repeat_music"
            android:textSize="20sp"
          
            />
        
        <TextView 
            android:id="@+id/musicArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicTitle"
            android:layout_centerHorizontal="true"
            android:text="@string/artist"
            android:textSize="20sp"
            
            
            />
        
         <ImageButton 
             android:id="@id/shuffle_music"
             android:background="#00000000"
             android:src="@drawable/shuffle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            
            />
        
        
    </RelativeLayout>
    
    <ScrollView 
        android:id="@+id/lrcScrollView"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好歌不容错过"  
            android:layout_gravity="center"   
             android:textSize="20sp"  
            />
    </ScrollView>
    
  
    <RelativeLayout 
        android:id="@+id/footer_layout"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        >
        
        <SeekBar 
             android:id="@+id/audioTrack"  
             android:layout_width="match_parent"  
             android:layout_height="wrap_content"   
             android:layout_centerVertical="true"              
            />
        
        <TextView 
            android:id="@+id/current_progress" 
            android:layout_below="@id/audioTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            />
        
        <TextView 
            android:id="@+id/final_progress"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/audioTrack"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        >
        <ImageButton 
            android:id="@+id/search_music"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"       
            
            />
        
        <ImageButton 
            android:id="@id/reverse_music"
            android:background="#00000000"
            android:src="@drawable/reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        
        <ImageButton 
            android:id="@id/play_music"
            android:background="#00000000"
            android:src="@drawable/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"       
            />
        
        <ImageButton 
            android:id="@id/next_music"
            android:background="#00000000"
            android:src="@drawable/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            
            />
        
        <ImageButton
            android:id="@+id/play_queue"
            android:background="#00000000"
            android:src="@drawable/expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:layout_gravity="center_vertical"               
            />
        
    </LinearLayout>
    
    
	  
    

</LinearLayout>
